<?xml version="1.0" encoding="utf-8"?>
<resources xmlns:tools="http://schemas.android.com/tools">

    <style name="TwEditText">
        <item name="android:textSize">@dimen/tw_text_size_16</item>
        <item name="android:fontFamily">sans-serif-medium</item>
        <item name="android:paddingStart">16dp</item>
        <item name="android:paddingEnd">16dp</item>
        <item name="android:freezesText">true</item>
        <item name="android:importantForAutofill" tools:targetApi="o">noExcludeDescendants
        </item> <!-- fixed crash on android O -->
    </style>

    <style name="TwTextInputLayout">
        <item name="android:textSize">@dimen/tw_text_size_16</item>
        <item name="textColorError">@color/tw_light_red</item>
        <item name="counterTextAppearance">@style/GdCounterLabel</item>
        <item name="hintTextAppearance">@style/TwTextInputLayoutLabelWhiteBg</item>
        <item name="android:textColorHint">@color/tw_pastel_gray</item>
        <item name="android:theme">@style/TwTextWhiteBgInputLayoutTheme</item>
    </style>

    <style name="GdCounterLabel" parent="TextAppearance.AppCompat.Small">
        <item name="android:textColor">@color/tw_pastel_gray</item>
        <item name="android:textSize">@dimen/tw_text_size_12</item>
    </style>

    <style name="TwTextInputLayoutLabelWhiteBg" parent="@android:style/TextAppearance">
        <item name="android:textColor">@color/tw_text_main</item>
        <item name="android:textSize">@dimen/tw_text_size_12</item>
    </style>

    <style name="TwTextWhiteBgInputLayoutTheme" parent="AppTheme">
        <item name="android:textColorPrimary">@color/tw_text_main</item>
        <item name="colorControlNormal">@color/tw_text_main</item>
        <item name="colorControlActivated">@color/tw_text_main</item>
        <item name="android:textCursorDrawable">@drawable/tw_text_cursor</item>
        <item name="textColorError">@color/tw_light_red</item>
    </style>

</resources>